{
  "name": "@mintlify/mcp",
  "version": "1.1.20",
  "type": "module",
  "description": "The Mintlify MCP package manager",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./bin/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc --project tsconfig.build.json",
    "clean:build": "rimraf bin",
    "clean:all": "rimraf node_modules .eslintcache && yarn clean:build",
    "watch": "tsc --watch",
    "test": "vitest run",
    "type": "tsc --noEmit",
    "lint": "eslint . --cache",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "mock": "npm run prepare && node bin/index.js add",
    "server": "npm run prepare && node bin/mcp-template/src/index.js"
  },
  "keywords": [
    "mcp"
  ],
  "author": "Mintlify, Inc.",
  "license": "ISC",
  "devDependencies": {
    "@mintlify/eslint-config-typescript": "^1.0.13",
    "@mintlify/openapi-types": "^0.0.0",
    "@mintlify/ts-config": "^2.0.2",
    "@types/dashify": "^1.0.3",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/parser": "^8.26.0",
    "typescript": "^5.5.3",
    "vitest": "^3.0.8"
  },
  "exports": "./bin/index.js",
  "bin": "./bin/index.js",
  "dependencies": {
    "@mintlify/openapi-parser": "^0.0.7",
    "@mintlify/scraping": "4.0.161",
    "@mintlify/validation": "0.1.323",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.6.2",
    "dashify": "^2.0.0",
    "dotenv": "^16.4.7",
    "openapi-types": "^12.0.0",
    "posthog-node": "^4.10.1",
    "prompts": "^2.4.2",
    "trieve-ts-sdk": "^0.0.60",
    "yargs": "^17.6.0",
    "zod": "^3.24.2"
  },
  "gitHead": "7faca88b59ab03e1c262277eda93bfb5d0d8c313"
}
